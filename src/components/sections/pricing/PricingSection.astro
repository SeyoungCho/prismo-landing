---
// Import SecondaryCTA component for use in this module
import ProductTabBtn from "@/components/ui/buttons/ProductTabBtn.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define props from Astro
const { pricing } = Astro.props;

// Define TypeScript type for products.
type Product = {
  name: string;
  description: string;
  price: string;
  cents: string;
  billingFrequency: string;
  features: Array<string>;
  purchaseBtnTitle: string;
  purchaseLink: string;
};

interface PricingSectionProps {
  title: string;
  subTitle: string;
  badge: string;
  thirdOption: string;
  btnText: string;
  pricing: {
    title: string;
    subTitle: string;
    webPlan: Product;
    arPlan: Product;
    ModelingPlan: Product;
    dashboardPlan: Product;
  };
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Section heading and sub-heading -->
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2
      class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
    >
      {pricing.title}
    </h2>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
      {pricing.subTitle}
    </p>
  </div>
  <!-- Contains two main product blocks -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 items-center space-evenly">
    <!-- Web Plan product details -->
    <div class="w-full rounded-xl bg-gray-800 p-6 sm: sm:p-8">
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
          {pricing.webPlan.name}
        </h3>
        <p class="text-indigo-300">{pricing.webPlan.description}</p>
      </div>

      <!-- <div class="mb-4">
        <span class="text-4xl font-bold text-neutral-200"
          >{pricing.webPlan.price}</span
        >
        <span class="text-lg font-bold text-neutral-300"
          >{pricing.webPlan.cents}</span
        >
        <span class="ms-3 text-sm text-indigo-200"
          >{pricing.webPlan.billingFrequency}</span
        >
      </div> -->
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-neutral-300 mt-16">
        {
          pricing.webPlan.features.map((feature: string) => (
            <li class="flex items-center gap-1.5">
              <Icon name="checkCircle" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA for purchasing the product -->
      <a
        href={pricing.webPlan.purchaseLink}
        class="block rounded-lg bg-gray-500 px-8 py-3 text-center text-sm font-bold text-gray-100 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-600 focus-visible:ring active:text-gray-300 md:text-base"
        >{pricing.webPlan.purchaseBtnTitle}</a
      >
    </div>
    <!-- AR Version Plan -->
     <div class="w-full rounded-xl bg-gradient-to-tr from-[#FF512F] to-[#F09819] p-6 sm: sm:p-8 ">
      <div class="mb-4">
